.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #f4f4f4;
}
.goods-box{
  width: 374rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
  border-right: 1rpx solid rgba(0,0,0,.15);
  border-bottom: 1rpx solid rgba(0,0,0,.15);
}
.goods-box .img-box{
  position: relative;
  width: 374rpx;
  height: 374rpx;
  /*border-radius: 6rpx;*/
  overflow: hidden;
}
.goods-box .img-box .image{
   width: 374rpx;
   height: 374rpx;
}
.goods-box .img-box .image .fresh-tag{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 120rpx;
  height: 120rpx;
}

.goods-box .goods-title{
  width: 374rpx;
  max-height: 84rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  padding: 12rpx 12rpx 12rpx 12rpx;
  color: #333;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-box .wrap{
  display: flex;
  justify-content: space-between;
  padding: 5rpx 12rpx 5rpx 0;
}
.goods-box .wrap .goodsSoldNumber{
  height: 50rpx;
  font-size: 22rpx;
  color: #666;
  justify-content:flex-start;
  align-items:flex-end;
  flex-direction:row;
  flex-wrap:wrap;
  display: flex;
  overflow: hidden;
}
.goods-box .goods-price-box{
  height: 50rpx;
  display: flex;  
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-end;
  overflow: hidden;
}
.goods-price-box .price-icon{
 font-size: 28rpx;
  color: #f45044;
  padding-left: 15rpx;
}
.goods-price-box .price-icon1{
  font-size: 24rpx;
  text-align: left;
  text-decoration: line-through;
  padding-left: 10rpx;
  color: dimgrey;
}
.goods-box .goods-price-box .goods-minPrice{
  font-size:28rpx;
  text-align: left;
  color: #e64340;
  overflow: hidden;
}
.goods-box .goods-price-box .goods-originalPrice{
  overflow: hidden;
  font-size: 24rpx;
  text-align: left;
  text-decoration: line-through;
  color: dimgrey;
}
.goods-box .sellInformation{
  width: 374rpx;
  box-sizing: border-box;
  padding: 0 12rpx 24rpx 2rpx;
  display: flex;  
  flex-direction: row;
  overflow: hidden;
  color: gray;
}

.goods-box .sellInformation .goodsSoldNumber{
  overflow: hidden;
  font-size: 22rpx;
  width: 35%;
  padding: 5rpx 0rpx 5rpx 10rpx;
  text-align: left;
}
.goods-box .sellInformation .goodsScore{
  overflow: hidden;
  font-size: 22rpx;
  width: 65%;
  padding: 5rpx 0;
  text-align: right;
}